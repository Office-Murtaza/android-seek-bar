<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.devbrackets.android.exomedia.ui.widget.VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:useDefaultControls="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="32sp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Title of a Video" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSeekBar"
        android:orientation="horizontal"
        android:layout_above="@+id/controlsWrapper"
        android:layout_width="match_parent"
        android:layout_height="42dp"/>

    <RelativeLayout
        android:id="@id/controlsWrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/icPlay"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/icPlay"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/icForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icPlay"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>